{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Edit Items",
  "type": "object",
  "properties": {
    "sku": {
      "type": "string",
      "pattern": "^[-A-Z0-9]*$",
      "patternDescription": "sku can only contain uppercase letters (A-Z), numbers (0-9), and the hyphen symbol (-). Ensure that it is all uppercase",
      "minLength": 1,
      "maxLength": 255
    },
    "name": {
      "type": "string",
      "pattern": "^[^<>%$&]*$",
      "patternDescription": "name cannot include certain characters (^, <, >, %, $, &)",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": ["string", "null"],
      "maxLength": 1048576
    },
    "additional_notes": {
      "type": ["string", "null"],
      "maxLength": 1048576
    }
  },
  "minProperties": 1
}
