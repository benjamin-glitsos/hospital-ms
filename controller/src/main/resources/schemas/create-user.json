{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Create User",
    "description": "Creates a new user who will be able to access the system.",
    "type": "object",
    "properties": {
        "username": {
            "description": "The username of the user.",
            "type": "string"
        },
        "password": {
            "description": "The password of the user.",
            "type": "string"
        },
        "email_address": {
            "description": "The email address of the user.",
            "type": "string"
        },
        "notes": {
            "description": "Miscellaneous notes that can be added to this item.",
            "type": "string"
        }
    },
    "required": ["username", "password", "email_address"]
}
