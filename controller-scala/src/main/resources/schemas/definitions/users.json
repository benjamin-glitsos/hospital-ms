{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User Definitions",
    "definitions": {
        "username": {
            "description": "E.g. bdole43",
            "type": "string",
            "maxLength": 20,
            "pattern": "^[-_a-zA-Z0-9]*$"
        },
        "email_address": {
            "description": "E.g. bdole@example.com",
            "type": "string",
            "maxLength": 50,
            "pattern": "^[a-zA-Z0-9.!#$%&''*+/=?^_\\`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$"
        },
        "first_name": {
            "description": "E.g. Bob",
            "type": "string",
            "maxLength": 50
        },
        "last_name": {
            "description": "E.g. Dole",
            "type": "string",
            "maxLength": 70
        },
        "other_names": {
            "description": "Middle names and any other names that a person may possess. E.g. James William",
            "type": "string",
            "maxLength": 120
        },
        "password": {
            "description": "A strong, secure password.",
            "type": "string",
            "maxLength": 40
        }
    }
}
