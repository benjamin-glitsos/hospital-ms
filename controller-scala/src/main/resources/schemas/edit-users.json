{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Edit Users",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "maxLength": 20,
            "pattern": "^[-_a-zA-Z0-9]*$"
        },
        "email_address": {
            "type": "string",
            "maxLength": 50,
            "format": "email"
        },
        "first_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "pattern": "^[^\\s]+(s+[^\\s]+)*$"
        },
        "last_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 70,
            "pattern": "^[^\\s]+(s+[^\\s]+)*$"
        },
        "other_names": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120,
            "pattern": "^[^\\s]+(s+[^\\s]+)*$"
        },
        "password": {
            "type": "string",
            "minLength": 1,
            "maxLength": 40,
            "pattern": "^[^\\s]+(s+[^\\s]+)*$"
        },
        "additional_notes": {
            "type": "string",
            "maxLength": 1048576,
            "pattern": "[\\s\\S]*\\S[\\s\\S]*"
        }
    },
    "minProperties": 1
}
