{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Edit Items",
    "type": "object",
    "properties": {
        "key": {
            "type": "string",
            "maxLength": 255
        },
        "name": {
            "type": "string",
            "maxLength": 255
        },
        "description": {
            "type": ["string", "null"],
            "nullable": true,
            "maxLength": 1048576,
            "pattern": "[\\s\\S]*\\S[\\s\\S]*"
        },
        "additional_notes": {
            "type": ["string", "null"],
            "nullable": true,
            "maxLength": 1048576,
            "pattern": "[\\s\\S]*\\S[\\s\\S]*"
        }
    },
    "minProperties": 1
}
