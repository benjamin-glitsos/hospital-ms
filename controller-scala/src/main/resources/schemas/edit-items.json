{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Edit Items",
    "type": "object",
    "properties": {
        "key": {
            "type": "string",
            "maxLength": 255,
            "pattern": "^[-A-Z0-9]*$"
        },
        "name": {
            "type": "string",
            "maxLength": 255
        },
        "description": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "type": "string",
            "maxLength": 1048576
        },
        "additional_notes": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "type": "string",
            "maxLength": 1048576
        }
    },
    "minProperties": 1
}
