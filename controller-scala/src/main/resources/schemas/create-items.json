{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Create Items",
    "type": "object",
    "properties": {
        "key": {
            "description": "E.g. SOFA_TAN_LEATHER_MATT",
            "type": "string",
            "maxLength": 255,
            "pattern": "^[-A-Z0-9]*$"
        },
        "name": {
            "description": "E.g. Sofa Leather Lounge (Tan, Leather)",
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "pattern": "^[^\\s]+(s+[^\\s]+)*$"
        },
        "description": {
            "type": "string",
            "maxLength": 1048576,
            "pattern": "[\\s\\S]*\\S[\\s\\S]*"
        },
        "additional_notes": {
            "type": "string",
            "maxLength": 1048576,
            "pattern": "[\\s\\S]*\\S[\\s\\S]*"
        }
    },
    "required": ["key", "name"]
}
