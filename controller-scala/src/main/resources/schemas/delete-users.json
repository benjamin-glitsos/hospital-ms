{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Delete or Restore Users",
    "type": "object",
    "properties": {
        "method": {
            "description": "The method of deletion or restoration to use.",
            "type": "string",
            "enum": ["soft", "hard", "restore"]
        },
        "usernames": {
            "description": "The identifier keys of the items that should be deleted or restored.",
            "type": "array",
            "minItems": 1,
            "maxItems": 100,
            "uniqueItems": true,
            "items": {
                "type": "string",
                "description": "Identifier key",
                "minLength": 1,
                "maxLength": 255,
                "pattern": "^[^\\s]+(s+[^\\s]+)*$"
            }
        }
    },
    "required": ["method", "usernames"]
}
