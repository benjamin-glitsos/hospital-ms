{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Create Users",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "maxLength": 20
        },
        "email_address": {
            "type": "string",
            "maxLength": 50,
            "format": "email"
        },
        "first_name": {
            "type": "string",
            "maxLength": 50
        },
        "last_name": {
            "type": "string",
            "maxLength": 70
        },
        "other_names": {
            "type": "string",
            "maxLength": 120
        },
        "password": {
            "type": "string",
            "maxLength": 40
        },
        "additional_notes": {
            "type": "string",
            "maxLength": 1048576
        }
    },
    "required": [
        "username",
        "email_address",
        "first_name",
        "last_name",
        "password"
    ]
}
