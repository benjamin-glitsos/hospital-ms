{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Edit Users",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "maxLength": 20,
            "pattern": "^[-_a-zA-Z0-9]*$",
            "patternDescription": "username can only contain letters (a-z and A-Z), numbers (0-9) and the hyphen (-) and underscore (_) symbols"
        },
        "email_address": {
            "type": "string",
            "maxLength": 50,
            "format": "email",
            "email": true
        },
        "first_name": {
            "type": "string",
            "maxLength": 50,
            "pattern": "^[^<>%$&]*$",
            "patternDescription": "first_name cannot include certain characters (^, <, >, %, $, &)"
        },
        "last_name": {
            "type": "string",
            "maxLength": 70,
            "pattern": "^[^<>%$&]*$",
            "patternDescription": "last_name cannot include certain characters (^, <, >, %, $, &)"
        },
        "other_names": {
            "type": ["string", "null"],
            "maxLength": 120,
            "nullable": true,
            "pattern": "^[^<>%$&]*$",
            "patternDescription": "other_names cannot include certain characters (^, <, >, %, $, &)"
        },
        "password": {
            "type": "string",
            "maxLength": 40,
            "pattern": "^[^<>%$&]*$",
            "patternDescription": "password cannot include certain characters (^, <, >, %, $, &)"
        },
        "additional_notes": {
            "type": ["string", "null"],
            "maxLength": 1048576,
            "nullable": true
        }
    },
    "minProperties": 1
}
