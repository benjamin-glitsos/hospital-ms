{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Edit Users",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "maxLength": 20,
            "pattern": "^[-_a-zA-Z0-9]*$"
        },
        "email_address": {
            "type": "string",
            "maxLength": 50,
            "format": "email",
            "email": true
        },
        "first_name": {
            "type": "string",
            "maxLength": 50
        },
        "last_name": {
            "type": "string",
            "maxLength": 70
        },
        "other_names": {
            "type": ["string", "null"],
            "maxLength": 120,
            "nullable": true
        },
        "password": {
            "type": "string",
            "maxLength": 40
        },
        "additional_notes": {
            "type": ["string", "null"],
            "maxLength": 1048576,
            "nullable": true
        }
    },
    "minProperties": 1
}
