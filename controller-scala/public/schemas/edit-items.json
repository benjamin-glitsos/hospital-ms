{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Edit Items",
    "type": "object",
    "properties": {
        "key": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255,
            "pattern": "^[-A-Z0-9]*$",
            "patternDescription": "key can only contain uppercase letters (A-Z), numbers (0-9) and the hyphen symbol (-)"
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "description": {
            "type": ["string", "null"],
            "minLength": 1,
            "maxLength": 1048576,
            "nullable": true
        },
        "additional_notes": {
            "type": ["string", "null"],
            "minLength": 1,
            "maxLength": 1048576,
            "nullable": true
        }
    },
    "minProperties": 1
}
